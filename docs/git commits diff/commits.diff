+/* Grundlayout */
+body {
+    font-family: Arial, Helvetica, sans-serif;
+    background-color: #f4f6f8;
+    color: #333;
+    max-width: 900px;
+    margin: 0 auto;
+    padding: 30px;
+    line-height: 1.6;
+}
+
+/* Überschriften */
+h1 {
+    color: #1f3c88;
+    margin-bottom: 5px;
+}
+
+h2 {
+    color: #3a3a3a;
+    margin-top: 10px;
+    margin-bottom: 15px;
+}
+
+/* Inhaltsboxen */
+fieldset {
+    background-color: #ffffff;
+    border: 1px solid #ccc;
+    border-radius: 6px;
+    padding: 20px;
+    margin-bottom: 20px;
+}
+
+legend {
+    padding: 0 10px;
+    font-weight: bold;
+    color: #1f3c88;
+}
+
+/* Text */
+p {
+    margin: 10px 0;
+}
+
+fieldset p {
+    margin-bottom: 15px;
+}
+
+/* Links */
+a {
+    color: #1f3c88;
+    text-decoration: none;
+}
+
+a:hover {
+    text-decoration: underline;
+}
